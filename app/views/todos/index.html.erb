<div id="display_box">
  <%= empty_message_holder(@not_done_todos.empty?) %>

  <%= show_grouped_todos %>

  <% unless @done.nil? -%>
    <%= render(:partial => "todos/completed", :object => @done,
          :locals => { :collapsible => true, :append_descriptor => nil }) -%>
  <% end -%>
</div>

<div id="input_box">
  <%= render :partial => "shared/add_new_item_form" %>
  <%= render :file => "sidebar/sidebar" %>
</div>